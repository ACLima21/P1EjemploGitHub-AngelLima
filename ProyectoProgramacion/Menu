    cout<<"2. Ver Dato de una persona"<<endl;
    cout<<"3. Eliminar una persona"<<endl;
    cout<<"4. Salir"<<endl;
    cout<<"Elija una opcion: ";
    cin >>op;
    switch(op){
    case 1:
        CedulaDatos();
        break;
    case 2:
    VerDatos();
        break;
    case 3:
        EliminarTXT();
        break;
    case 4:
        break;
    }
}


void VerDatos(){
    int op;
    cout<<"==============================="<<endl;
    cout<<" Como quiere leer los datos" <<endl;
    cout<<"==============================="<<endl;
    cout<<"1. Archivo binario"<<endl;
    cout<<"2. Archivo de texto"<<endl;
    cout<<"3. Ir al menu principal"<<endl;
    cout<<"Elija una opcion: ";
    cin >>op;
    switch(op){
    case 1:
        LeerBin();
        VerDatos();
        break;
    case 2:
        leerTXT();
        VerDatos();
        break;
    case 3:
        Menu();
        break;
    default:
        cout<< "Opcion incorecta"<<endl;
        VerDatos();
        break;

    }
}

void GuardarMenu(){
    int op;
    cout<<"==============================="<<endl;
    cout<<" Como quiere guardar los datos" <<endl;
    cout<<"==============================="<<endl;
    cout<<"1. Archivo binario"<<endl;
    cout<<"2. Archivo de texto"<<endl;
    cout<<"3. Ir al menu principal"<<endl;
    cout<<"Elija una opcion: ";
    cin >>op;
    switch(op){
    case 1:
        cout<< "SE A GUARDADO CORECTAMENTE EL ARCHIVO "<<endl;
        GuardarBin();
        GuardarMenu();
        break;
    case 2:
        cout<< "SE A GUARDADO CORECTAMENTE EL ARCHIVO "<<endl;
        GuardarTXT();
        GuardarMenu();
        break;
    case 3:
        Menu();
        break;
    default:
        cout<< "Opcion incorecta"<<endl;
        GuardarMenu();
        break;

    }
}

